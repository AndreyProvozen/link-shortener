{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": { "@/*": ["./src/*"] },
    "typeRoots": ["./node_modules/@types", "./node_modules/@testing-library", "./src/types"],
    "allowJs": true,
    "types": ["jest", "node", "jest-dom"]
  },
  "include": ["next-env.d.ts", "src/types/next-pwa.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
